= form_for @quiz do |f|
  - if @quiz.errors.any?
    #error_explanation
      %h2= "#{pluralize(@quiz.errors.count, "error")} prohibited this quiz from being saved:"
      %ul
        - @quiz.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :category
    = f.collection_select :category_id, @categories, :id, :name

  %h2 Questions
  f.fields_for :tags do |tag_form|
    = tag_form.label :content
    = tag_form.text_field :content
    = tag_form.label :right_answer
    = tag_form.text_field :right_answer
    = tag_form.label :wrong_answer1
    = tag_form.text_field :wrong_answer1
    = tag_form.label :wrong_answer2
    = tag_form.text_field :wrong_answer2
    = tag_form.label :wrong_answer3
    = tag_form.text_field :wrong_answer3


  .actions
    = f.submit 'Save'
