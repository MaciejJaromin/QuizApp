%p#notice= notice

%p
  %b Name:
  = @quiz.name
%p
  %b Description:
  = @quiz.description
%p
  %b Category:
  = link_to @quiz.category.name, @quiz.category

%h1 Listing questions

%table
  %tr
    %th Content
    %th Right answer
    %th Wrong answer1
    %th Wrong answer2
    %th Wrong answer3
    %th
    %th
    %th

  - @quiz.questions.each do |question|
    %tr
      %td= question.content
      %td= question.right_answer
      %td= question.wrong_answer1
      %td= question.wrong_answer2
      %td= question.wrong_answer3
      %td= link_to 'Show', question
      %td= link_to 'Edit', edit_question_path(question)
      %td= link_to 'Destroy', question, :method => :delete, :data => { :confirm => 'Are you sure?' }

= link_to 'Edit', edit_quiz_path(@quiz)
\|
= link_to 'Back', quizzes_path
